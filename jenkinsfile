def groovyScript
def STAGE

pipeline {
    agent any 
    parameters{
        string(name: 'VERSION', defaultValue: 'Test', description: 'Stage to be executed')
    }
    stages {
        stage('Pipleline Initialization') { 
            steps {
                echo "Initializing the project."
                script{
                    groovyScript = load "script.groovy"
                }
            }
        }
        stage('Building Docker Image') { 
            steps {
                script {
                    STAGE = "BUILD"
                    groovyScript.startingMessage()
                }
                sh 'ls'
                // sh "podman build -t jenkins-nginx-test-image ."
                script {
                    groovyScript.endingMessage()
                }
            }
        }
        stage('Running Docker Image') { 
            steps {
                script {
                    STAGE = "RUNNING"
                    groovyScript.startingMessage("RUNNING")
                }


                script {
                    groovyScript.endingMessage("RUNNING")
                }
            }
        }
    }
    post {
        always{
            echo "Pipleline finished..."
        }
        success{
            echo "Pipleline finished successfully..."
        }
        failure{
            echo "Pipleline failure..."
        }
    }
}